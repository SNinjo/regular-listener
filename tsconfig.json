{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
		"moduleResolution": "Node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
		
		"declaration": true,
		"declarationDir": "./build/",
		"emitDeclarationOnly": true,
		"rootDir": "./src",
    },
	"exclude": [
		"src/**/*.test.ts",
		"src/rollup/*.ts",
		"build/**/*"
	]
}