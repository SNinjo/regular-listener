{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"overrides": [
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"ignorePatterns": [
		"build/**/*.js",
		"build/**/*.ts",
		"*.config.js"
	],
	"rules": {
		"indent": ["warn", "tab"],
		"no-console": "warn",
		"no-var": "error",
		"no-empty": "warn",
		"no-prototype-builtins": "off",
		"no-case-declarations": "off",
		"no-async-promise-executor": "off",
		"no-constant-condition": "off",
		"arrow-spacing": "warn",
		"block-spacing": "warn",
		"comma-spacing": "warn",
		"keyword-spacing": "warn",
		"prefer-const": "off",
		"space-before-blocks": "warn",
		"rest-spread-spacing": "warn"
	}
}
